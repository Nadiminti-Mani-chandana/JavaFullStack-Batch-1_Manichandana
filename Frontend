        <!-- View Plans Form -->
        <div class="form-group">
            <h2>View Plans</h2>
            <form id="viewPlansForm">
                <label for="customerId">Enter Customer ID:</label>
                <input type="text" id="customerId" name="customerId" required>
                <button type="button" onclick="viewPlans()">View Plans</button>
            </form>
            <div id="plansResult"></div>
        </div>
        
        <!-- Call History Form -->
        <div class="form-group">
            <h2>View Call History</h2>
            <form id="viewCallHistoryForm">
                <label for="callId">Enter Call ID:</label>
                <input type="text" id="callId" name="callId" required>
                <button type="button" onclick="viewCallHistory()">View Call History</button>
            </form>
            <div id="callHistoryResult"></div>
        </div>
    </div>

    <script>
        function viewPlans() {
            const customerId = document.getElementById('customerId').value;
            // Simulate an API call
            const plans = [
                { id: 1, name: 'Basic Plan', price: '$10' },
                { id: 2, name: 'Premium Plan', price: '$20' }
            ]; // Replace with actual data from your backend

            let resultHtml = '<h3>Plans:</h3><table><tr><th>ID</th><th>Name</th><th>Price</th></tr>';
            plans.forEach(plan => {
                resultHtml += `<tr><td>${plan.id}</td><td>${plan.name}</td><td>${plan.price}</td></tr>`;
            });
            resultHtml += '</table>';
            document.getElementById('plansResult').innerHTML = resultHtml;
        }

        function viewCallHistory() {
            const callId = document.getElementById('callId').value;
            // Simulate an API call
            const callHistory = [
                { id: 1, from: '123-456-7890', to: '098-765-4321', duration: '5 minutes' },
                { id: 2, from: '234-567-8901', to: '876-543-2109', duration: '10 minutes' }
            ]; // Replace with actual data from your backend

            let resultHtml = '<h3>Call History:</h3><table><tr><th>ID</th><th>From</th><th>To</th><th>Duration</th></tr>';
            callHistory.forEach(call => {
                resultHtml += `<tr><td>${call.id}</td><td>${call.from}</td><td>${call.to}</td><td>${call.duration}</td></tr>`;
            });
            resultHtml += '</table>';
            document.getElementById('callHistoryResult').innerHTML = resultHtml;
        }
    </script>
